<mvc:View
    controllerName="com.ah.uimodule.controller.covid.CovidLatestPieChart"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
    <Page 
        id="covid"
        showHeader="false">
        <viz:Popover id="idPopOver"></viz:Popover>
        <viz:VizFrame
            id="idVizFrame"
            uiConfig="{applicationSet:'fiori'}"
            height='100%'
            width="100%"
            vizType='pie'>
            <viz:dataset>
                <viz.data:FlattenedDataset
                    data="{ 
                        path: 'covidLatest>/data/regional',
                        sorter: {
                            path: 'totalConfirmed',
                            descending: true
                        }
                    }">
                    <viz.data:dimensions>
                        <viz.data:DimensionDefinition
                            name="Location"
                            value="{covidLatest>loc}"
                        />
                    </viz.data:dimensions>
                    <viz.data:measures>
                        <viz.data:MeasureDefinition
                            name="TotalConfirmed"
                            value="{covidLatest>totalConfirmed}"
                        />
                    </viz.data:measures>
                </viz.data:FlattenedDataset>
            </viz:dataset>
            <viz:feeds>
                <viz.feeds:FeedItem
                    uid="size"
                    type="Measure"
                    values="TotalConfirmed"
                />
                <viz.feeds:FeedItem
                    uid="color"
                    type="Dimension"
                    values="Location"
                />
            </viz:feeds>
        </viz:VizFrame>
    </Page>
</mvc:View>
