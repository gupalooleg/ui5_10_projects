<mvc:View
    controllerName="com.ah.uimodule.controller.covid.CovidHistory"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
    <Page 
        id="covid"
        showHeader="false">
        <Panel
            expandable="true"
            expanded="true"
            headerText="Data">
            <content>
                <Button
                    text="Latest count by list"
                    press="onPressList"
                />
                <Button
                    text="Latest count by graph"
                    press="onPressGraph"
                />
            </content>
        </Panel>
        <viz:Popover id="idPopOver"></viz:Popover>
        <viz:VizFrame
            id="idVizFrame"
            uiConfig="{applicationSet:'fiori'}"
            height='100%'
            width="100%"
            vizType='line'>
            <viz:dataset>
                <viz.data:FlattenedDataset
                    data="{/data}">
                    <viz.data:dimensions>
                        <viz.data:DimensionDefinition
                            name="Day"
                            value="{day}"
                        />
                    </viz.data:dimensions>
                    <viz.data:measures>
                        <viz.data:MeasureDefinition
                            name="Summary"
                            value="{summary/total}"
                        />
                    </viz.data:measures>
                </viz.data:FlattenedDataset>
            </viz:dataset>

            <viz:feeds>
                <viz.feeds:FeedItem
                    id='valueAxisFeed'
                    uid="valueAxis"
                    type="Measure"
                    values="Summary"
                />
                <viz.feeds:FeedItem
                    id='categoryAxisFeed'
                    uid="categoryAxis"
                    type="Dimension"
                    values="Day"
                />
            </viz:feeds>
        </viz:VizFrame>
    </Page>
</mvc:View>
