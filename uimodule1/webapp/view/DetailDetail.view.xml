<mvc:View
    controllerName="com.ah.uimodule1.controller.DetailDetail"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<f:DynamicPage
        id="dynamicPageId"
		toggleHeaderOnTitleClick="false">
		<!-- DynamicPage Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="District wise pollution"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
            <VBox
                fitContainer="true">
                <Table
                    id="districtsPollutionTable"
                    inset="false"
                    items="{districts>/}"
                    class="sapFDynamicPageAlignContent"
                    width="auto">
                    <columns>
                        <Column width="12em">
                            <Text text="district" />
                        </Column>
                        <Column	hAlign="End">
                            <Text text="AQI" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation" press="onDistrictListItemPress">
                            <cells>
                                <ObjectIdentifier title="{districts>district}" text="{districts>AQI}"/>
                                <ObjectNumber number="{districts>AQI}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>